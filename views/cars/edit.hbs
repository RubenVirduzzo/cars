<form class="form-horizontal container col-3 text-center mt-5 p-4 bg-secondary" action="/cars/edit/{{car.id}}" method="post">
    <h1 class="text-white p-4">Edit Car</h1>
    <div class="form-group">
        <input type="text" name="marca" placeholder="Marca" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="{{car.marca}}">
    </div>
    <div class="form-group">
        <input type="text" name="potencia" placeholder="Potencia" class="form-control"  id="exampleInputEmail1" aria-describedby="emailHelp" value="{{car.potencia}}">
    </div>
    <div class="form-group">
        <input type="url" name="url" placeholder="Url image" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="{{car.url}}">
    </div>
  
    <button type="submit" class="btn btn-primary">Edit car</button>
</form>